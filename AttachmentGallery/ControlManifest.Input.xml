<?xml version="1.0" encoding="utf-8"?>
<manifest>
    <control namespace="DancingWithCrmControls" constructor="AttachmentGallery" version="1.0.10"
        display-name-key="AttachmentGallery" description-key="AttachmentGallery description"
        control-type="standard">
        <external-service-usage enabled="false" />

        <property name="PlaceHolder" display-name-key="PlaceHolder"
            description-key="PlaceHolder for gallery" of-type="SingleLine.Text" usage="bound"
            required="true" />
        <property name="RelatedTableName" display-name-key="RelatedTableName"
            description-key="Name of related table" of-type="SingleLine.Text" usage="input"
            required="false" />
        <property name="RelatedTableFilter" display-name-key="RelatedTableFilter"
            description-key="Column from related table that is used for filtering"
            of-type="SingleLine.Text" usage="input"
            required="false" />
        <property name="RelatedTableColumn" display-name-key="RelatedTableColumn"
            description-key="Column from related table that is used to fetch attachments"
            of-type="SingleLine.Text" usage="input"
            required="false" />

        <resources>
            <code path="index.ts" order="1" />
            <css path="css/main.css" order="1" />
            <img path="img/pdf_icon.png" />
        </resources>

        <feature-usage>
            <uses-feature name="Utility" required="true" />
            <uses-feature name="WebAPI" required="true" />
        </feature-usage>

    </control>
</manifest>